<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Paper Format for BK111 Expense Report - Clean Layout -->
        <record id="paperformat_expenses" model="report.paperformat">
            <field name="name">BK111 Expenses Report (Thai Clean)</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
            <field name="disable_shrinking" eval="False"/>
            <!-- ปิด Header/Footer -->
            <field name="print_page_width">0</field>
            <field name="print_page_height">0</field>
            <field name="report_ids" eval="[(4, ref('day.report_bg111_form'))]"/>
        </record>
    </data>
</odoo>